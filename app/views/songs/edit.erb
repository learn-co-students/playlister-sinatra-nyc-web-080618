<h1>edit</h1>
<h2 id = "song_name"><%=@song.name%></h2>

<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Song Name </label>

  <input type="text" name="song_name" id = "Song Name" value = "<%=@song.name%>" placeholder="<%=@song.name%>">

<br>

  <label for="artist_name">Artist Name </label>

  <input type="text" name="artist_name" id = "Artist Name" value = "<%=@song.artist.name%>" placeholder="<%=@song.artist.name%>">

<br>
  <% Genre.all.each do |genre| %>

  <br>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <%=genre.name%>
</input>
  <% end %>


  <br>
  <input id="Save" type="submit" name="submit">

</form>
